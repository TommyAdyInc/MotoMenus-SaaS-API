{
  "containerDefinitions": [
    {
      "essential": true,
      "image": "%AWS_ECR_ACCOUNT_URL%/%REPONAME_LOWERCASE%:%IMAGE_TAG%",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": true,
          "awslogs-group": "ecs-awslogs-%BRANCH%",
          "awslogs-region": "%AWS_DEFAULT_REGION%",
          "awslogs-stream-prefix": "Repo-%REPONAME_Workflow-%WORKFLOW_ID%"
        }
      },
      "memoryReservation": 50,
      "name": "laravel",
      "secrets": [
        {
          "name": "APP_KEY",
          "valueFrom": "arn:aws:secretsmanager:%AWS_DEFAULT_REGION%:%AWS_ACCOUNT_ID%:secret:Laravel-APP_KEY-for-%REPONAME%-%AWS_SECRET_NAME_APP_KEY%"
        }
      ]
    },
    {
      "essential": true,
      "image": "%AWS_ECR_ACCOUNT_URL%/%REPONAME_LOWERCASE%-nginx:latest",
      "links": ["php-fpm"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": true,
          "awslogs-group": "ecs-awslogs-%BRANCH%",
          "awslogs-region": "%AWS_DEFAULT_REGION%",
          "awslogs-stream-prefix": "Repo-%REPONAME_Workflow-%WORKFLOW_ID%"
        }
      },
      "memoryReservation": 100,
      "name": "nginx",
      "portMappings": [
        {
          "hostPort": 0,
          "containerPort": 80
        }
      ],
      "volumesFrom": [
        {
          "sourceContainer": "laravel"
        }
      ]
    },
    {
      "essential": true,
      "image": "%AWS_ECR_ACCOUNT_URL%/%REPONAME_LOWERCASE%-php-fpm:latest",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": true,
          "awslogs-group": "ecs-awslogs-%BRANCH%",
          "awslogs-region": "%AWS_DEFAULT_REGION%",
          "awslogs-stream-prefix": "Repo-%REPONAME_Workflow-%WORKFLOW_ID%"
        }
      },
      "memoryReservation": 200,
      "name": "php-fpm",
      "volumesFrom": [
        {
          "sourceContainer": "laravel"
        }
      ]
    }
  ],
  "executionRoleArn": "arn:aws:iam::%AWS_ACCOUNT_ID%:role/ecsTaskExecutionRole",
  "family": "%REPONAME%-%BRANCH%-task-definition"
}
