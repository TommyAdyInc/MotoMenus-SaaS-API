{
  "family": "%REPONAME%-%BRANCH%-task-definition",
  "containerDefinitions": [
    {
      "essential": true,
      "image": "%AWS_ECR_ACCOUNT_URL%/%REPONAME_LOWERCASE%:%IMAGE_TAG%",
      "logConfiguration": {
        "logDriver": "json-file",
        "options": {
          "max-size": "50m"
        }
      },
      "memoryReservation": 50,
      "name": "laravel"
    },
    {
      "essential": true,
      "image": "%AWS_ECR_ACCOUNT_URL%/%REPONAME_LOWERCASE%-nginx:latest",
      "links": [
        "php-fpm"
      ],
      "logConfiguration": {
        "logDriver": "json-file",
        "options": {
          "max-size": "50m"
        }
      },
      "memoryReservation": 100,
      "name": "nginx",
      "portMappings": [
        {
          "hostPort": 0,
          "containerPort": 80
        }
      ],
      "volumesFrom": [
        {
          "sourceContainer": "laravel"
        }
      ]
    },
    {
      "essential": true,
      "image": "%AWS_ECR_ACCOUNT_URL%/%REPONAME_LOWERCASE%-php:latest",
      "logConfiguration": {
        "logDriver": "json-file",
        "options": {
          "max-size": "50m"
        }
      },
      "memoryReservation": 200,
      "name": "php-fpm",
      "volumesFrom": [
        {
          "sourceContainer": "laravel"
        }
      ]
    }
  ]
}